{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Foldline",
  "version": "0.1.0",
  "identifier": "com.foldline.app",
  "build": {
    "beforeDevCommand": "cd ../frontend && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../frontend && npm run build",
    "frontendDist": "../frontend/build"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["bin/*"],
    "externalBin": ["bin/python_backend"],
    "copyright": "Copyright Â© 2025",
    "category": "Utility",
    "shortDescription": "Local wearable data analyzer",
    "longDescription": "Foldline is a privacy-first, local-only wearable data analyzer that works with Garmin GDPR exports and FIT files. All data stays on your machine."
  },
  "app": {
    "windows": [
      {
        "title": "Foldline",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:* ws://localhost:*; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
    }
  },
  "plugins": {
    "dialog": {
      "all": true
    },
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "python_backend",
          "cmd": "bin/python_backend",
          "sidecar": true
        }
      ]
    }
  }
}
